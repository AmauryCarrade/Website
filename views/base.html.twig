<!DOCTYPE html>
<html lang="en">
 	<head>
		<meta charset="utf-8">
		<title>{% block maintitle %}Untilted page{% endblock %} | Amaury Carrade</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">
		<meta name="author" content="">

		<!-- styles -->
		<link href="{{ app.request.basePath }}/css/bootstrap.css" rel="stylesheet">
		<link href="{{ app.request.basePath }}/css/bootstrap-responsive.css" rel="stylesheet">
		<link href="{{ app.request.basePath }}/css/font-awesome.css" rel="stylesheet">
		<link href="{{ app.request.basePath }}/css/prettify.css" rel="stylesheet">
		<link href="{{ app.request.basePath }}/css/site.css" rel="stylesheet">

		{% block stylesheets %}{% endblock %}

		<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>

	<body class="plan">
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>
					<a class="brand" href="{{ path('index') }}">Amaury Carrade</a>
					<div class="nav-collapse">
						<ul class="nav">
							<li{% if section == 'index' %} class="active"{% endif %}>
								<a href="{{ path('index') }}">Home</a>
							</li>
							<li{% if section == 'projects' %} class="active"{% endif %}>
								<a href="{{ path('projects') }}">Projects</a>
							</li>
							<li{% if section == 'contact' %} class="active"{% endif %}>
								<a href="{{ path('contact') }}">Contact</a>
							</li>

							<li class="divider-vertical"></li>

							<li class="dropdown{% if section == 'upload' or section == 'pgp' %} active{% endif %}">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Personal stuff <span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li>
										<a href="{{ app.request.basePath }}/links/">Links</a>
									</li>
									<li>
										<a href="{{ app.request.basePath }}/paste/">Online pastebin</a>
									</li>
									<li>
										<a href="{{ app.request.basePath }}/rss/">
											<span class="icon-key pull-right"></span>RSS Feeds
										</a>
									</li>
									<li{% if section == 'upload' %} class="active"{% endif %}>
										<a href="{{ path('upload') }}">
											<span class="icon-key pull-right"></span>Files
										</a>
									</li>
									<li class="divider"></li>
									<li{% if section == 'pgp' %} class="active"{% endif %}>
										<a href="{{ path('pgp') }}">PGP/GPG public key</a>
									</li>
								</ul>
							</li>
						</ul>
					</div><!-- /.nav-collapse -->
				</div>
			</div><!-- /navbar-inner -->
		</div><!-- /navbar -->


		<div class="container">
			<header class="page-header">
				{% block title %} 
					<h1>Untitled page</h1>
					<p></p>
				{% endblock %}
			</header>
			<div class="row-fluid">
				{% block content %} {% endblock %}
			</div>
		</div> <!-- /container-fluid -->

		<!-- Javascript
		================================================== -->
		<!-- Placed at the end of the document so the pages load faster -->
		<script src="{{ app.request.basePath }}/js/jquery.min.js"></script>
		<script src="{{ app.request.basePath }}/js/bootstrap.min.js"></script>
		<script src="{{ app.request.basePath }}/js/prettify/prettify.js"></script>
		<script src="{{ app.request.basePath }}/js/site.js"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>


<!-- Icons from http://gregoryloucas.com/Font-Awesome-More/ -->